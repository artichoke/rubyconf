{
  "name": "@artichokeruby/rubyconf",
  "version": "0.5.0",
  "private": true,
  "description": "Artichoke Ruby conference talk website",
  "keywords": [
    "programming language",
    "scripting",
    "ruby",
    "rust"
  ],
  "homepage": "https://artichoke.github.io/rubyconf/",
  "bugs": "https://github.com/artichoke/rubyconf/issues",
  "license": "MIT",
  "author": "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)",
  "contributors": [
    "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)"
  ],
  "repository": "github:artichoke/rubyconf",
  "dependencies": {
    "reveal.js": "^5.0.2"
  },
  "devDependencies": {
    "@artichokeruby/logo": "^0.12.0",
    "@minify-html/node": "^0.11.1",
    "eslint": "8.55.0",
    "eta": "^3.2.0",
    "highlight.js": "^11.9.0",
    "marked": "^11.0.0",
    "marked-highlight": "^2.0.9",
    "prettier": "^3.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.69.5",
    "vite": "^5.0.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "copy:assets": "rimraf \"src/public/!(*.txt|site.webmanifest)\" && node copy-assets.mjs",
    "fmt": "prettier --write \"**/*\"",
    "lint": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx --fix"
  }
}
